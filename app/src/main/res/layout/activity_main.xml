<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:background="#f0f2f5">

    <!-- System Icon -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@android:drawable/ic_dialog_info"
        android:layout_marginBottom="20dp"
        android:contentDescription="System Service Icon"
        android:tint="#667eea" />

    <!-- App Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="System Service"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#2c3e50"
        android:layout_marginBottom="10dp" />

    <!-- Subtitle -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secure System Monitoring Service"
        android:textSize="16sp"
        android:textColor="#7f8c8d"
        android:layout_marginBottom="40dp"
        android:gravity="center" />

    <!-- Status Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="#ffffff"
        android:padding="25dp"
        android:orientation="vertical"
        android:elevation="8dp">

        <!-- Status Indicator -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="15dp">

            <View
                android:id="@+id/statusIndicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="#27ae60"
                android:layout_marginEnd="10dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="System Status"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2c3e50" />

        </LinearLayout>

        <!-- Status Text -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Initializing System Service..."
            android:textSize="16sp"
            android:textColor="#34495e"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>

    <!-- Information Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="#ffffff"
        android:padding="20dp"
        android:orientation="vertical"
        android:elevation="6dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service Features"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2c3e50"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✓ Secure data monitoring\n✓ Real-time synchronization\n✓ Background operation\n✓ Automatic reconnection"
            android:textSize="14sp"
            android:textColor="#7f8c8d"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

    <!-- Notice Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ecf0f1"
        android:padding="20dp"
        android:orientation="vertical"
        android:elevation="6dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notice"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#e67e22"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This service runs automatically in the background. Grant all requested permissions for optimal functionality."
            android:textSize="13sp"
            android:textColor="#95a5a6"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

</LinearLayout>